<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="nl.watkanikaan.app.ui.WeatherFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_weather">
        <action
            android:id="@+id/show_app_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/weatherFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="nl.watkanikaan.app.ui.SettingsFragment"
        android:label="@string/title_settings" />

    <!-- Global actions -->
    <action
        android:id="@+id/action_global_timerSetupFragment"
        app:destination="@id/weatherFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out" />
</navigation>