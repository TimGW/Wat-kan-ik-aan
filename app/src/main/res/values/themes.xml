<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="MyTheme.DayNight" parent="Base.MyTheme"/>

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.MyTheme" parent="Base.MaterialThemeBuilder">
        <item name="iconTint">?colorSecondary</item>

        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.MyTheme.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.MyTheme.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.MyTheme.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.MyTheme.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.MyTheme.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.MyTheme.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.MyTheme.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.MyTheme.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.MyTheme.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.MyTheme.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.MyTheme.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.MyTheme.LabelSmall</item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?android:colorBackground
        </item>
    </style>

